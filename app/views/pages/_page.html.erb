<%= link_to page, id: dom_id(page), class: "text-decoration-none py-4 hover:bg-gray-200 max-w-4xl" do %>
  <div class="grid grid-cols-3 items-center">
    <div class="col-span-2">
      <h5 class="font-bold text-medium truncate mb-0" ><%= page.name %></h5>
    </div>
    <%= render page.results.order(created_at: :desc).first, class: "col-span-1" %>
  </div>
<% end %>
