<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: "page name"%>
    <%= f.input :url, placeholder: "https://example.org/..." %>
    <%= f.select :check_type, [["Text", "text"], ["Exists", "exists"], ["Not Exists", "not_exists"], ["Shipping Now", "shipping_now"]] %>
    <%= f.input :selector, placeholder: ".class" %>
    <%= f.input :match_text, placeholder: "text to match" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "border border-gray-200 rounded shadow px-2 py-1 hover:bg-blue-200" %>
  </div>
<% end %>
